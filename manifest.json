{
  "manifest_version": 2,
  "name": "YT Transcript",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "https://cdnjs.cloudflare.com/ajax/libs/nlp_compromise/6.5.5/nlp_compromise.min.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "subtitles.png"
  }
}